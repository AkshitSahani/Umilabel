<!DOCTYPE html>
<html>
  <head>
    <title>Umilabel</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

    <%= form_tag(campaigns_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search users or campaigns" %>
      <%= submit_tag "Search", :name => nil %>
    <% end %>

    <% if flash[:notice] %>
        <p id="notice"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert] %>
        <p id="alert"><%= flash[:alert] %></p>
      <% end %>

    <%= yield %>

    <% if current_user %>
      Signed in as <%= current_user.username %> | <%= link_to "Logout", session_path('current'), method: :delete %>
    <% else %>
      <%= link_to 'Login', new_session_path %> | <%= link_to 'Signup', new_user_path %>
    <% end %>

    <br><br>
  </body>
</html>
