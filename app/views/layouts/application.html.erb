<!DOCTYPE html>
<html>
  <head>
    <title>Umilabel</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>


  <body>
    <% if session[:user_id] %>

      <div id="current-user"></div>

      <%= link_to 'Umilabel', root_path %>

      <%= link_to "My Profile", user_path(session[:user_id]) %>

      <%= form_tag(campaigns_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search users or campaigns" %>
        <%= submit_tag "Search", :name => nil %>
      <% end %>
    <% end %>

    <% if flash[:notice] %>
        <p id="notice"><%= flash.now[:notice] %></p>
      <% end %>
      <% if flash[:alert] %>
        <p id="alert"><%= flash.now[:alert] %></p>
      <% end %>

    <%= yield %>

    <% if current_user %>
      Signed in as <%= current_user.username %> | <%= link_to "Logout", session_path('current'), method: :delete %>
    <% else %>
      <%= link_to 'Login', new_session_path %> | <%= link_to 'Signup', new_user_path %>
    <% end %>

    <br><br>
  </body>
</html>
