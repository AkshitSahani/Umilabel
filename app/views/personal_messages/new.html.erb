<h1>New message to <%= @receiver.studio_name %></h1>

<%= form_for @personal_message do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <%= f.label :body %>
  <%= f.text_area :body %>
<div class="send-message">
  <%= f.submit 'Send message'%>
</div>
<% end %>

<% if @personal_message.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@personal_message.errors.count, "error") %> are between you and your profile right now:</h2>

    <ul>
    <% @personal_message.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
    </ul>
  </div>
<% end %>
