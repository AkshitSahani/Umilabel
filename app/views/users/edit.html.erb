Edit your account!

<%= form_for @user do |f| %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name %> <br>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>
  <%= f.label :studio_name %>
  <%= f.text_field :studio_name %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit %>

<% end %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> are between you and your profile right now:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
    </ul>
  </div>
<% end %>
